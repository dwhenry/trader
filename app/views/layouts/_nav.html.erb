<nav class="menu">
  <ul class="nav metismenu" id="sidebar-menu">
    <% Nav.nav(self).each do |item| %>
      <li class="<%= 'active' if item.current? %>">
        <a href="<%=item.path %>">
          <i class="<%= "fa fa-#{item.icon}" if item.icon %>"></i>
          <%= item.name %>
          <% if item.children.any? %><i class="fa arrow"></i><% end %>
        </a>
        <% if item.children.any? %>
          <ul class="<%= 'in' if item.current? %>">
            <% item.children.each do |child| %>
              <li class="<%= 'active' if child.current? %>">
                <a href="<%=child.path %>">
                  <i class="<%= "fa fa-#{child.icon}" if child.icon %>"></i>
                  <%= child.name %>
                </a>
              </li>
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>
